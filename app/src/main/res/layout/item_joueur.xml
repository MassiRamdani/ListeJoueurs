<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/placeholder_grey"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="false">

        <ProgressBar
            android:id="@+id/joueur_progress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="@dimen/activity_margin"
            android:layout_height="@dimen/activity_margin"
            android:layout_gravity="center"
            android:theme="@style/CircularProgress" />

        <ImageView
            android:id="@+id/image_joueur"
            android:layout_width="@dimen/poster_thumb_width"
            android:layout_height="@dimen/poster_thumb_height" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
         android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/poster_thumb_width"
        android:paddingLeft="@dimen/poster_thumb_width"
         android:paddingEnd="@dimen/activity_margin"
        android:paddingRight="@dimen/activity_margin"
        android:paddingBottom="@dimen/activity_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:id="@+id/name_joueur"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_content"
                android:layout_marginLeft="@dimen/activity_margin_content"
                android:layout_marginTop="@dimen/activity_margin_quarter"
                android:layout_weight="4"
                android:maxLines="1"
                tools:text="Joueur name" />

            <TextView
                android:id="@+id/city_joueur"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"

                android:layout_weight="1"
                android:gravity="start"
                android:maxLines="1"
                android:textStyle="bold"
                tools:text="paris" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/speed_joueur"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_content"
                android:layout_marginLeft="@dimen/activity_margin_content"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="score" />

            <TextView
                android:id="@+id/stamina_joueur"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_content"
                android:layout_marginLeft="@dimen/activity_margin_content"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="score" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/dribbling_joueur"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_content"
                android:layout_marginLeft="@dimen/activity_margin_content"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="score" />

            <TextView
                android:id="@+id/passing_joueur"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_content"
                android:layout_marginLeft="@dimen/activity_margin_content"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="score" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/shooting_joueur"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_content"
                android:layout_marginLeft="@dimen/activity_margin_content"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="score" />

            <TextView
                android:id="@+id/score_joueur"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_margin_content"
                android:layout_marginLeft="@dimen/activity_margin_content"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="score" />
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>